{
 "compilerOptions": {
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "options": {
      "useTabs": true
    }
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "report": "compact"
  },
  "test": {
    "files": {
      "include": [
        "src/"
      ]
    }
  }
}
